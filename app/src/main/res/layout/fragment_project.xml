<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/developer_lists"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    >

<android.support.v7.widget.CardView
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"

    android:focusable="true"
    android:layout_margin="5dp"

    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/cardView3"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">


        <TextView
            android:text="Skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-condensed" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/com_facebook_button_border_color_focused" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:id="@+id/user_skills"
            android:numColumns="5"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
android:id="@+id/cardView3"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:clickable="true"
android:focusable="true"
android:foreground="?android:attr/selectableItemBackground"
app:cardCornerRadius="5dp"
android:layout_margin="5dp"

android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_marginTop="5dp"
android:layout_below="@+id/cardView"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="10dp"
    android:weightSum="1">


    <TextView
        android:text="Bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif-condensed" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/com_facebook_button_border_color_focused" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:maxLines="3"
            android:layout_height="wrap_content"
            android:id="@+id/user_bio"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:textColor="@color/bodyTextColor"
            android:typeface="serif"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_more"
            android:layout_gravity="end"
            android:textColor="@color/buttonColor"
            android:clickable="true"
            android:layout_alignBaseline="@+id/user_bio"
            android:layout_alignBottom="@+id/user_bio"
            android:layout_toRightOf="@+id/user_bio"
            android:layout_marginLeft="5dp"
            android:textStyle="normal|bold" />

    </RelativeLayout>


</LinearLayout>
</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
android:id="@+id/cardView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:clickable="true"
android:layout_margin="15dp"

android:focusable="true"
android:foreground="?android:attr/selectableItemBackground"
app:cardCornerRadius="5dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true"
android:paddingLeft="5dp">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_date_range_black_24dp"
        android:id="@+id/user_picture"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_marginTop="15dp"
        android:elevation="2dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_school"
        android:layout_gravity="center"
        android:textStyle="normal|italic"  />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_speciality"
        android:textSize="14sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:textColor="@color/bg_main"
        android:layout_gravity="center"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_location"
        android:layout_gravity="center" />

</LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>